<h1>Recent tweets</h1>

<% if user_signed_in? %>
	<%= link_to "Create New Tweet", new_post_path %>
<% end %>

<% @posts.each do |post| %>
	<p><%=post.content%>
	<%= link_to "#{post.user.handle}", user_path(post.user_id) %>
	<%= link_to "Edit", edit_post_path(post) if post.user.id == current_user.id rescue nil %>	
	<%= link_to "Remove", post, method: 'delete' if post.user.id == current_user.id rescue nil %>
	</p>
<% end %>